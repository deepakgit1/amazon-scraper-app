<%-include('../partials/header')-%>


<h1 class="text-center mt-5 mb-3">Login</h1>
<div class="container w-25">
    <%-include('../partials/messages')-%>

    <form action="/login" method="POST">

        <div class="form-group px-0">
            <input type="email" value="guest@example.com" name="email" class="form-control" placeholder="Email Address">
        </div>

        <div class="form-group px-0">
            <input type="password" value="123456" name="password" class="form-control" placeholder="Password">
        </div>

        <a class="float-right mt-0 mb-3 text-primary" href="/forgot">Forgot Password?</a>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>
    <p class="text-center text-dark my-2"> OR </p>
    <a href="/signup" class="btn btn-success btn-block">Sign Up</a>
</div>
    

</div>

<%-include('../partials/footer')-%>